    "languages":{"ruby":{"default_version":"1.9.3"}},
    "nodejs":{"install_method":"package"},
    "scala":{
      "url":"http://www.scala-lang.org/files/archive/scala-2.10.3.tgz",
      "version":"2.10.3"
    }
  },
  "override_attributes": {
  },
  "chef_type": "role",
  "run_list": [
    "recipe[apt]",
    "recipe[apt-cacher-ng]",
    "recipe[nodejs::install_from_package]",
    "recipe[nodejs::npm]",
    "recipe[ruby]",
    "recipe[golang]",
    "recipe[leiningen]",
    "recipe[haskell]",
    "recipe[perl]",
    "recipe[scala::default]",
    "recipe[python]"
